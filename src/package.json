{
  "name": "ob-core-node-example-microservice",
  "layer": "channel",
  "version": "1.0.0",
  "description": "Node example channel service",
  "main": "server/server.js",
  "config": {
    "repository": "https://nexus.sandbox.extranet.group/nexus/content/groups/npm-master/"
  },
  "scripts": {
    "start": "node .",
    "format": "semistandard --env mocha --fix",
    "pretest": "npm run format",
    "test": "npm run test:coverage npm run test:unit",
    "test:coverage": "nyc",
    "test:unit": "mocha --exit './server/**/*.spec.js'",
    "test:component": "MOCHAWESOME_REPORTDIR=./component-tests/reports MOCHAWESOME_REPORTFILENAME=mocha-report mocha --exit --timeout 100000 --reporter mochawesome './component-tests/**/*.spec.js'"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "dependencies": {
    "compression": "1.6.2",
    "cors": "2.8.3",
    "helmet": "3.6.1",
    "loopback": "3.18.2",
    "loopback-boot": "2.27.1",
    "loopback-component-explorer": "4.2.0",
    "loopback-connector-rest": "2.1.0",
    "strong-error-handler": "2.1.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.12.1",
    "eslint-config-semistandard": "12.0.0",
    "eslint-config-standard": "11.0.0-beta.0",
    "mocha": "5.0.0",
    "mochawesome": "3.0.2",
    "nyc": "10.2.0",
    "request": "2.83.0",
    "request-promise": "4.2.2",
    "semistandard": "12.0.0",
    "sinon": "4.3.0",
    "supertest": "3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "gerrit.sandbox.extranet.group:29418/ob-core-node-example-microservice"
  },
  "nyc": {
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "server/**/*.spec.js",
      "server/datasources/*",
      "server/server.js",
      "server/api.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "author": {
    "name": "Ed Kelly",
    "email": "ekelly@sapient.com"
  },
  "license": "UNLICENSED"
}
